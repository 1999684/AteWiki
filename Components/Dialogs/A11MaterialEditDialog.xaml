<Window x:Class="AtelierWiki.Components.Dialogs.A11MaterialEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Material Editor" Height="550" Width="420"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="TechBgBrush" Color="#CC0F172A"/>
        <!-- 半透明背景 -->
        <SolidColorBrush x:Key="TechAccentBrush" Color="#00F0FF"/>
        <SolidColorBrush x:Key="TechTextBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TechDimTextBrush" Color="#94A3B8"/>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#0B0E14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#33475D6F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="{StaticResource TechAccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource TechAccentBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00F0FF" BlurRadius="4" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 通用按钮样式 -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TechAccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TechAccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2200F0FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00F0FF" BlurRadius="8" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4400F0FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 主要动作按钮 (Save) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#2200F0FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- 次要动作按钮 (Cancel) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="BorderBrush" Value="#667788"/>
            <Setter Property="Foreground" Value="#8899AA"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 滚动条样式 -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Background="#33475D6F" CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 窗口主容器 -->
    <Border Background="{StaticResource TechBgBrush}" 
            BorderBrush="{StaticResource TechAccentBrush}" 
            BorderThickness="1" 
            CornerRadius="4">
        <Border.Effect>
            <!-- 科技感外发光 -->
            <DropShadowEffect BlurRadius="25" Color="#00F0FF" Opacity="0.3" ShadowDepth="0"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 标题 -->
                <RowDefinition Height="*"/>
                <!-- 内容 (滚动) -->
                <RowDefinition Height="Auto"/>
                <!-- 按钮 -->
            </Grid.RowDefinitions>

            <!-- 1. 标题区域 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="EDIT MATERIAL //" Foreground="{StaticResource TechAccentBrush}" FontSize="12" Opacity="0.7" FontFamily="Consolas"/>
                <TextBlock Text="新增素材信息" FontSize="20" FontWeight="Bold" Foreground="White">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" BlurRadius="5" ShadowDepth="0" Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Border Height="1" Background="#33475D6F" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- 2. 表单内容区域 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,-10,0" Padding="0,0,10,0">
                <StackPanel>
                    <!-- Name -->
                    <TextBlock Text="NAME >" Foreground="{StaticResource TechDimTextBrush}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtName" Margin="0,0,0,12"/>

                    <!-- Level -->
                    <TextBlock Text="LEVEL (Lv) >" Foreground="{StaticResource TechDimTextBrush}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtLevel" Margin="0,0,0,12"/>

                    <!-- Location -->
                    <TextBlock Text="LOCATION >" Foreground="{StaticResource TechDimTextBrush}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtLoc" Margin="0,0,0,12"/>

                    <!-- Monster -->
                    <TextBlock Text="DROP BY >" Foreground="{StaticResource TechDimTextBrush}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtMonster" Margin="0,0,0,15"/>

                    <!-- 图片上传区域 -->
                    <TextBlock Text="IMAGE PREVIEW >" Foreground="{StaticResource TechDimTextBrush}" FontSize="11" Margin="0,0,0,6"/>
                    <Grid Height="110" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 图片预览框 -->
                        <Border Grid.Column="0" BorderBrush="#33475D6F" BorderThickness="1" CornerRadius="4" Background="#0B0E14">
                            <!-- 占位符或实际图片 -->
                            <Grid>
                                <TextBlock Text="NO IMAGE" Foreground="#33475D6F" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                                <Image x:Name="ImgPreview" Stretch="Uniform" Margin="2"/>
                            </Grid>
                        </Border>

                        <!-- 操作按钮组 -->
                        <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtImgPath" Text="No file selected" FontSize="10" Foreground="#667788" 
                                       TextWrapping="Wrap" Margin="0,0,0,8" FontFamily="Consolas"/>

                            <!-- 选择图片按钮 -->
                            <Button Content="选择图片..." Click="BtnSelectImage_Click" HorizontalAlignment="Left" Width="140" Margin="0,0,0,5"/>

                            <!-- 清除图片按钮 (红色警示风格) -->
                            <Button Content="CLEAR" Click="BtnClearImage_Click" HorizontalAlignment="Left" Width="80" 
                                    FontSize="10" Padding="0,4" BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Foreground" Value="#FF4444"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#33FF0000"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- 3. 底部按钮区域 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="CANCEL" Click="BtnCancel_Click" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,15,0"/>
                <Button Content="SAVE DATA" Click="BtnSave_Click" Style="{StaticResource PrimaryButtonStyle}" Width="120"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
