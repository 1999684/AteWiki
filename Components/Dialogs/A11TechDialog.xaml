<Window x:Class="AtelierWiki.Components.Dialogs.A11TechDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A11 Details" Height="300" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">

    <!-- 保持之前的 A11 科技风格 -->
    <Border Background="#0F172A" 
            BorderBrush="#00F0FF" 
            BorderThickness="1" 
            CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#1E293B" CornerRadius="5,5,0,0" Padding="15,0">
                <TextBlock Text="A11 INFO PANEL" Foreground="#00F0FF" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Consolas"/>
            </Border>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="MessageText" 
                           Text="这里是内容..." 
                           Foreground="#E2E8F0" 
                           FontSize="14" 
                           TextWrapping="Wrap"
                           LineHeight="22"/>
            </ScrollViewer>

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,0">
                <Button Content="CLOSE" Click="BtnClose_Click" 
                        Background="#1E293B" Foreground="#00F0FF" BorderBrush="#00F0FF" BorderThickness="1"
                        Padding="20,5" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
