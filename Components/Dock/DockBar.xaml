<UserControl x:Class="AtelierWiki.Components.Dock.DockBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:AtelierWiki.Converters" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800"
             x:Name="DockRoot">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisConverter"/>

        <!-- Dock 面板背景样式 (保持原样) -->
        <Style x:Key="DockPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#CC111111"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 【新增】美化的 ToolTip 样式 -->
        <Style x:Key="FancyToolTipStyle" TargetType="ToolTip">
            <!-- 覆盖默认系统样式 -->
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <!-- 位置设置：在上方显示 -->
            <Setter Property="Placement" Value="Top"/>
            <!-- 垂直偏移：稍微远离图标一点点，或者向上提 -->
            <Setter Property="VerticalOffset" Value="-15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border CornerRadius="6" 
                                Background="#E6202020" 
                                BorderBrush="#66888888" 
                                BorderThickness="1"
                                Padding="10,6"
                                Margin="5">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="6" Direction="270" Opacity="0.5"/>
                            </Border.Effect>
                            <TextBlock Text="{TemplateBinding Content}" 
                                       Foreground="#FFF0F0F0" 
                                       FontWeight="Medium"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       TextOptions.TextFormattingMode="Display"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 图标项模版 -->
        <DataTemplate x:Key="DockItemTemplate">
            <!-- 【修改】在容器上直接设置 ToolTipService 属性以消除延迟 -->
            <Grid x:Name="ItemContainer" VerticalAlignment="Bottom" Margin="5,0,5,10"
                  Tag="{Binding}" 
                  MouseLeftButtonUp="DockItem_MouseLeftButtonUp"
                  Cursor="Hand">

                <Grid.Width>50</Grid.Width>
                <Grid.Height>50</Grid.Height>

                <!-- 【修改】应用自定义样式的 ToolTip -->
                <Grid.ToolTip>
                    <ToolTip Content="{Binding Label}" Style="{StaticResource FancyToolTipStyle}"/>
                </Grid.ToolTip>

                <Border Background="#222" CornerRadius="12" BorderBrush="#555" BorderThickness="1" Cursor="Hand">
                    <Grid>
                        <Image Source="{Binding IconPath}" Stretch="UniformToFill" Margin="8"/>
                        <!-- 这里的 TextBlock 是图标内的备用文字，不是 ToolTip -->
                        <TextBlock Text="{Binding Label}" Foreground="Gray" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                   FontSize="10" 
                                   Visibility="{Binding IconPath, Converter={StaticResource NullToVisConverter}}"/>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="Transparent" 
          MouseMove="Dock_MouseMove" 
          MouseLeave="Dock_MouseLeave">

        <Border Style="{StaticResource DockPanelStyle}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Padding="10,10" 
                Margin="0,0,0,20">

            <ItemsControl x:Name="DockItemsControl" 
                          ItemsSource="{Binding Items, ElementName=DockRoot}"
                          ItemTemplate="{StaticResource DockItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Border>
    </Grid>
</UserControl>
